@using FallowUP.Models;
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<USERS>
@{
    ViewBag.Title = "StudentsList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Öğrenciler Listesi</h2>

<table class="table table-bordered">
    <tr>
        <td>ID</td>
        <td>NAME</td>
        <td>SURNAME</td>
        <td>EMAIL</td>
        <td>PASSWORD</td>
        <td>TYPE</td>
        <td>GÜNCELLE</td>
        <td>SİL</td>
    </tr>

    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.ID</td>
                <td>@user.NAME</td>
                <td>@user.SURNAME</td>
                <td>@user.EMAIL</td>
                <td>@user.PASSWORD</td>
                <td>@user.TYPE</td>
                <td><a href="/Admin/GetUser/@user.ID" class="btn btn-success">GÜNCELLE</a></td>
                <td><a href="/Admin/DeleteUser/@user.ID" class="btn btn-danger">SİL</a></td>
            </tr>
        }
    </tbody>
</table>
<div class="">
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("/StudentsList", new { page, @class = "" }))
</div>

<a href="/Admin/AddNewUser/" class="btn btn-primary">Yeni Kullanıcı Ekle</a>
